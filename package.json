{
  "name": "veil-x",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git@github.com:Veil-Project/Veil-X.git"
  },
  "author": {
    "name": "The Veil Team",
    "email": "support@veil-project.com",
    "url": "https://veil-project.com"
  },
  "bugs": {
    "url": "https://github.com/Veil-Project/Veil-X/issues"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "nf start",
    "build": "yarn app:build && yarn electron:compile",
    "package": "rimraf release && yarn build && electron-builder build -c.extraMetadata.main=electron/main.js --publish never",
    "package-all": "rimraf release && yarn build && electron-builder build -mwl",
    "app:dev": "BROWSER=false react-scripts start",
    "app:build": "react-scripts build",
    "electron:compile": "tsc --project electron/tsconfig.json",
    "electron:dev": "NODE_ENV=development electron electron/main.js",
    "lint": "eslint 'electron/**/*.ts?(x)' && eslint 'src/**/*.ts?(x)'",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:styles": "postcss ./styles/tailwind.css -o src/styles.css",
    "prebuild": "yarn build:styles",
    "prestart": "yarn build:styles"
  },
  "build": {
    "productName": "Veil X",
    "appId": "com.veil-project.veil-x",
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "build/index.html",
      "build/**/*",
      "electron/*.js",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "veil-x",
      "owner": "veil-project"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg",
        "zip"
      ],
      "darkModeSupport": true,
      "icon": "public/logo512.png",
      "type": "distribution"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "pkg": {},
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "public/icon/icon.ico"
    },
    "nsis": {
      "installerIcon": "public/icon/icon.ico",
      "warningsAsErrors": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "icon": "public/icon"
    },
    "snap": {
      "grade": "stable"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@reecelucas/react-use-hotkeys": "^1.1.2",
    "@types/request": "^2.48.4",
    "bip39": "^3.0.2",
    "classnames": "^2.2.6",
    "electron-updater": "^4.2.0",
    "framer-motion": "^1.10.2",
    "lodash": "^4.17.15",
    "overmind": "^22.0.4",
    "overmind-react": "^23.0.4",
    "qrcode.react": "^1.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^4.8.1",
    "react-icons": "^3.8.0",
    "react-json-view": "^1.19.1",
    "react-toastify": "^5.4.1",
    "react-transition-group": "^4.3.0",
    "request-progress": "^3.0.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.24",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.21",
    "@types/qrcode.react": "^1.0.0",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/react-transition-group": "^4.2.3",
    "@types/webpack-env": "^1.14.1",
    "autoprefixer": "^9.7.3",
    "electron": "^7.1.1",
    "electron-builder": "^22.1.0",
    "foreman": "^3.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "react-scripts": "3.3.0",
    "rimraf": "^3.0.0",
    "tailwindcss": "^1.2.0",
    "tailwindcss-animations": "^2.0.0",
    "tailwindcss-font-variant-numeric": "^0.1.3",
    "tailwindcss-gradients": "^2.3.1",
    "tailwindcss-grid": "^1.2.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  }
}
